<div class="jumbotron">
<h1 class="display-4">Contas Bancarias</h1>
<hr class="my-4">
<p id="notice"><%= notice %></p>
<%= link_to 'Cadastrar nova Conta', new_bank_account_path ,class:"btn btn-primary btn-lg",role:"button"%>
<p><strong>Data: <%= I18n.l(Date.today) %> </strong></p>

<p id="notice"><%= notice %></p>

<p class="lead">Contas Cadastradas</p>


<table class="table table-dark">
  <thead>
    <tr>
      <th>Agency</th>
      <th>Account number</th>
      <th>Limit</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bank_accounts.each do |bank_account| %>
      <tr>
        <td><%= bank_account.agency_id %></td>
        <td><%= bank_account.account_number %></td>
        <td><%= bank_account.limit %></td>
        <td><%= link_to 'Detalhes', bank_account %></td>
        <td><%= link_to 'Editar', edit_bank_account_path(bank_account) %></td>
        <td><%= link_to 'Excluir', bank_account, method: :delete, data: { confirm: 'VocÃª realmente quer excluir essa Conta?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to t("Voltar"),agencies_path ,class:"btn btn-primary btn-lg",role:"button"  %>
</div>