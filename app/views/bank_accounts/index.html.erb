<h1>Contas Bancarias</h1>

<table>
  <thead>
    <tr>
      <th>Agency</th>
      <th>Account number</th>
      <th>Limit</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bank_accounts.each do |bank_account| %>
      <tr>
        <td><%= bank_account.agency_id %></td>
        <td><%= bank_account.account_number %></td>
        <td><%= bank_account.limit %></td>
        <td><%= link_to 'Detalhes', bank_account %></td>
        <td><%= link_to 'Editar', edit_bank_account_path(bank_account) %></td>
        <td><%= link_to 'Excluir', bank_account, method: :delete, data: { confirm: 'VocÃª realmente quer excluir essa Conta?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

